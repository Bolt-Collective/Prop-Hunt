@using Sandbox
@using Sandbox.UI
@using PropHunt

@namespace PropHunt.Menu

@inherits PanelComponent

<root>
	<MenuNavigationPanel @ref="NavigationPanel">
	</MenuNavigationPanel>
</root>

@code
{
	public static MenuComponent Instance { get; set; }
	
	[Property] 
	public SceneFile GameScene { get; set; }
	
	private NavHostPanel NavigationPanel { get; set; }

	protected override void OnAwake()
	{
		Instance = this;
	}

	/// <summary>
	/// the hash determines if the system should be rebuilt. If it changes, it will be rebuilt
	/// </summary>
	protected override int BuildHash() => System.HashCode.Combine( RealTime.Now.CeilToInt() );
}
